extends layout
block content
  .container-fluid
    .row
      .col-xs-12.col-md-8.col-md-offset-2
        .row.tweet-box
          .col-md-6.col-xs-12 Search Term:&nbsp;
            span.label.label-search #{searchTerm}
          .col-md-6.col-xs-12 Retweets Threshold:&nbsp;
            span.label.label-count Atleast #{minRetweetCount}
    .row
      .col-xs-12.col-md-8.col-md-offset-2
        each tweet in data
          .tweet-box.row
            .col-xs-1
              img.profile-image(src=tweet.user.profile_image_url_https)
            .col-xs-11
              a.user-name(href="https://twitter.com/"+tweet.user.screen_name) #{tweet.user.name}
              a.twitter-handle(href="https://twitter.com/"+tweet.user.screen_name) @#{tweet.user.screen_name}
              p #{tweet.text}
              img.retweet-icon(src="/images/retweet.png")
              span.retweet-count #{tweet.retweet_count}
              img.like-icon(src="/images/like.png")
              span.like-count #{tweet.favorite_count}

